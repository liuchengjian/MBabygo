<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="320px"
        android:layout_marginRight="120px"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_height="386px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="344px"
            android:orientation="vertical"
            android:paddingRight="30px"
            android:paddingTop="40px"
            android:paddingLeft="30px"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/gdmap_marker_background"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找不到南"
                android:textSize="30px"
                android:textColor="#e6333333"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_v2"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步行街有很多好吃的的东西，快来尝尝吧"
                android:textSize="26px"
                android:textColor="#333333"
                android:layout_marginTop="20px"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <ImageView
            android:layout_width="84px"
            android:layout_height="84px"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
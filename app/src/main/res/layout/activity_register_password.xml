<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgrund_color"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        style="@style/ClubToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"

        app:title="Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--返回按钮-->
            <ImageView
                android:id="@+id/iv_register_password_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="注册"
                android:textColor="#333"
                android:textSize="34px" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@color/backgrund"
        ></View>
    <EditText
        android:id="@+id/et_register_new_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="请设置密码"
        android:textColorHint="#aaa"
        android:textSize="30px"
        android:textColor="#333"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@null"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:background="#d8d8d8"
        ></View>
    <EditText
        android:id="@+id/et_register_new_password_again"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="请再次输入密码"
        android:textColorHint="#aaa"
        android:textSize="30px"
        android:textColor="#333"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@null"
        />
    <Button
        android:id="@+id/iv_register_password_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="83px"
        android:background="@mipmap/revise_password_sure"
        />

</LinearLayout>
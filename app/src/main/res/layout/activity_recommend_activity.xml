<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 顶部图片首页-->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_activity_join"
        android:layout_below="@+id/ct_header_activity">
        <!-- 中间更多-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_middle"
                android:layout_marginLeft="32px"
                android:layout_marginRight="30px"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"
                    >

                </View>

                <TextView
                    android:layout_marginTop="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="30px"
                    android:text="亲近大自然，认识植物，领率大自然的生气，亲近大自然，认识植物，领率大自然的生气亲近大自然，认识植物，领率大自然的生气" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:textColor="#00c0ff"
                    android:textSize="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00c0ff"
                        android:textSize="30px"
                        android:text="费用说明：" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00c0ff"
                        android:textSize="30px"
                        android:text="100元起" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00c0ff"
                        android:textSize="30px"
                        android:text="活动时间：" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00c0ff"
                        android:textSize="30px"
                        android:text="2017年10月~2017年12月" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10px"
                    android:textColor="#00c0ff"
                    android:textSize="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲近大自然，认识植物，领率大自然的生气，亲近大自然，认识植物，领率大自然的生气亲近大自然，认识植物，领率大自然的" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_middle"
                android:layout_width="match_parent"
                android:layout_height="158px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32px"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="98px"
                        android:layout_gravity="center"
                        android:layout_height="98px">
                    <liu.chj.mbabygo.activity.CircleImageView
                        android:id="@+id/iv_actvity_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/yuanyuanma2" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/icon_v2"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_actvity_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="旅游夏利营" />

                        <TextView
                            android:id="@+id/tv_actvity_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_actvity_place"
                            android:layout_marginTop="15px"
                            android:gravity="center_vertical"
                            android:text="3场活动" />

                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/bt_more"
                    android:layout_width="188px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:textSize="26px"
                    android:textColor="#ffcd5b"
                    android:background="@mipmap/btn_xiangqing2"
                    android:text="查看更多详情" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <!-- 底部立即参加、咨询和收藏-->

    <RelativeLayout
        android:id="@+id/rl_activity_join"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"
                ></View>
            <LinearLayout
                android:id="@+id/ll_consult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="42px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_zixun2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5px"
                    android:textSize="22px"
                    android:gravity="center"
                    android:textColor="#372929"
                    android:text="咨询" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_join_activity"
                android:layout_width="280px"
                android:layout_height="60px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_canjia2"
                android:gravity="center"
                android:textSize="22px"
                android:textColor="#372929"
                android:text="立即参加" />

            <LinearLayout
                android:id="@+id/ll_synopsis_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_shoucang_n2" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5px"
                    android:textSize="22px"
                    android:gravity="center"
                    android:textColor="#372929"
                    android:text="收藏" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/ct_header_activity"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/fl_header_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/yuanyuanma2"
                app:layout_collapseMode="parallax" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88000000" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="94px"
                android:layout_marginTop="132px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我们一起旅行"
                        android:textColor="#fff"
                        android:textSize="38px" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/cornerbutton"
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:text="5+"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_yellow"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/cornerbutton"
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:text="旅行"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_yellow"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/cornerbutton"
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:text="户外活动"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_yellow"
                        android:textSize="24px" />


                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="三月带孩子去看不一样的风情"
                    android:textColor="#99ffffff" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_riqi2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="35px"
                        android:text="2014年4月~5月20日"
                        android:textColor="#99ffffff" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_didian2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="35px"
                        android:text="重庆——北京"
                        android:textColor="#99ffffff" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20px"
                    android:text="￥100起"
                    android:textColor="@color/text_yellow" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoFrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_header_activity"
            style="@style/ClubToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:layout_marginTop="60px"
            app:title="Toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--返回按钮-->
                <ImageView
                    android:id="@+id/iv_header_activity_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/icon_back_white" />
                <!--分享按钮-->
                <ImageView
                    android:id="@+id/iv_header_activity_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/icon_fenxiang_white" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.CollapsingToolbarLayout>

</RelativeLayout>
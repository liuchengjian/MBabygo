<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2ffffff"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/backgrund">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="58px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="128px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_doyen_hot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="30px"
                    android:text="悟空"/>
                <TextView
                    android:id="@+id/list_doyen_hot_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="22px"
                    android:text="_体育达人"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginTop="12px"
                >
                <ImageView
                    android:id="@+id/iv_doyen_hot_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/yuanyuanma1"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000">
                </View>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/list_doyen_hot_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_alignParentBottom="true"
                        android:text="【你的一切，让我意义所在】"
                        android:gravity="left"
                        android:layout_marginLeft="15px"
                        android:layout_marginBottom="30px"
                        android:textColor="#ffffff"
                        android:textSize="38px"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="26px"
                        android:layout_marginLeft="30px"
                        android:layout_above="@+id/list_doyen_hot_title"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:layout_alignParentBottom="true"
                            android:text="来自话题:"
                            android:textColor="#ffffff"
                            android:textSize="22px"
                            />
                        <TextView
                            android:id="@+id/tv_doyen_hot_topic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:layout_alignParentBottom="true"
                            android:text="旅游"
                            android:layout_marginLeft="10px"
                            android:textColor="#ffffff"
                            android:textSize="22px"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="98px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_height="98px">

            <liu.chj.mbabygo.activity.CircleImageView
                android:id="@+id/iv_doyen_hot_Photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/yuanyuanma1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_v2" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_doyen_hot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginTop="48px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="30px"
        android:textColor="#d9333333"
        android:text="2002年的第一场雪，比以往来的更晚一些！"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="28px"
        android:layout_marginBottom="40px"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_doyen_hot_transmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="75px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_zhuanfa2"
                />
            <TextView
                android:id="@+id/tv_doyen_hot_transmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199+"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:textColor="#333"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_doyen_hot_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_pinglun2"
                />
            <TextView
                android:id="@+id/tv_doyen_hot_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199+"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:textColor="#333"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_doyen_hot_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_zan_h2"
                />
            <TextView
                android:id="@+id/tv_doyen_hot_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199+"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:textColor="#333"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
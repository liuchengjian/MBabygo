<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="30px"
       android:layout_marginTop="50px"
       >
       <RelativeLayout
           android:layout_width="98px"

           android:layout_height="98px">

           <liu.chj.mbabygo.activity.CircleImageView
               android:id="@+id/iv_topic_activity_Photo"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@mipmap/yuanyuanma1" />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:src="@mipmap/icon_v2" />
       </RelativeLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_marginLeft="20px"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/list_topic_activity_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ff6c00"
               android:textSize="30px"
               android:text="悟空"/>
           <TextView
               android:id="@+id/list_topic_activity_from"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ff6c00"
               android:textSize="22px"
               android:text="_体育达人"/>
       </LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="30px"
           android:textSize="20px"
           android:layout_gravity="center_vertical"
           android:textColor="#aaa"
           android:text="刚刚"
           />
   </LinearLayout>
    <TextView
        android:id="@+id/list_topic_activity_mian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30px"
        android:textSize="28px"
        android:layout_gravity="center_vertical"
        android:textColor="#333"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:text="我发表了活动："
        />
    <FrameLayout
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="15px"
        android:layout_width="match_parent"
        android:layout_height="330px">
        <ImageView
            android:id="@+id/iv_topic_activity_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/list_topic_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_alignParentBottom="true"
            android:text="【我们约的那场旅行】"
            android:gravity="left"
            android:layout_marginLeft="15px"
            android:layout_marginBottom="30px"
            android:textColor="#ffffff"
            android:textSize="38px"
            />
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="28px"
        android:layout_marginBottom="40px"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_topic_activity_transmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="75px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_zhuanfa2"
                />
            <TextView
                android:id="@+id/tv_topic_activity_transmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199+"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:textColor="#333"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_topic_activity_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_pinglun2"
                />
            <TextView
                android:id="@+id/tv_topic_activity_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199+"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:textColor="#333"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_topic_activity_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_zan_h2"
                />
            <TextView
                android:id="@+id/tv_topic_activity_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199+"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="10px"
                android:textColor="#333"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
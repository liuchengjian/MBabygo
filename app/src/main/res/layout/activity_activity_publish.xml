<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/backgrund"
    android:layout_height="match_parent">
    <!-- 让他获得焦点，实现进入界面不弹出键盘 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"></LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_publish"
        style="@style/ClubToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:title="Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--返回按钮-->
            <TextView
                android:id="@+id/tv_activity_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="取消" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="活动发布"
                android:textColor="#333"
                android:textSize="34px" />

            <ImageView
                android:id="@+id/iv_activity_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/mbt_publish"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view_activity_publish"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/toolbar_activity_publish"
        android:background="#ccc"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_activity_publish">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_activity_cut_picture"
                android:layout_width="match_parent"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/add_fengmian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:text="标题"
                    android:textSize="32px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <EditText
                    android:id="@+id/et_activity_publish_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:textSize="32px"
                    android:hint="请输入标题(8个字以内)"
                    android:textColorHint="@color/Activity_publish_text_color"
                    android:textColor="#333"
                    android:background="@null"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ccc"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主题"
                    android:textSize="32px"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <EditText
                    android:id="@+id/et_activity_publish_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:textSize="32px"
                    android:textColor="#333"
                    android:hint="请输入主题"
                    android:textColorHint="@color/Activity_publish_text_color"
                    android:background="@null"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ccc"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:text="时间"
                    android:textSize="32px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <EditText
                    android:id="@+id/et_activity_publish_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:textSize="32px"
                    android:hint="请输入时间"
                    android:textColorHint="@color/Activity_publish_text_color"
                    android:textColor="#333"
                    android:background="@null"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ccc"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:textSize="32px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <EditText
                    android:id="@+id/et_activity_publish_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:textSize="32px"
                    android:hint="请输入地点"
                    android:textColorHint="@color/Activity_publish_text_color"
                    android:textColor="#333"
                    android:background="@null"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ccc"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:textSize="32px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <EditText
                    android:id="@+id/et_activity_publish_price"
                    android:textSize="32px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:textColor="#333"
                    android:hint="请输入价格"
                    android:textColorHint="@color/Activity_publish_text_color"
                    android:background="@null"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ccc"></View>
            <RelativeLayout

                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_activity_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签"
                    android:textSize="32px"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <TextView
                    android:id="@+id/tv_iocn_text"
                    android:layout_toRightOf="@+id/tv_activity_icon"
                    android:layout_toLeftOf="@+id/tv_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textSize="32px"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333"
                    />
                <TextView
                    android:id="@+id/tv_choose"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textColor="#1c98df"
                    android:text="点击选择"
                    android:textSize="28px"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ccc"></View>
            <RelativeLayout
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="41px"
                    android:text="详情"
                    android:textSize="32px"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Activity_publish_text_color"
                    />
                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_toRightOf="@+id/tv_comment_title"
                    android:layout_toLeftOf="@+id/tv_comment_revise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="好的撒上打扫家里卡圣诞节啊尽量快点撒就拉上啊撒合适的"
                    android:layout_marginTop="42px"
                    android:layout_marginLeft="10px"
                    android:gravity="top|left"
                    android:textSize="32px"
                    android:layout_marginRight="10px"
                    android:ellipsize="end"
                    android:textColor="#333"
                    />
                <TextView
                    android:id="@+id/tv_comment_revise"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#1c98df"
                    android:text="点击填写"
                    android:textSize="28px"

                    android:layout_alignBottom="@+id/tv_comment"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="150px"></View>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
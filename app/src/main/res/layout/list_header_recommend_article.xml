<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrund_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_header_recpmmend_acticler_item"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <ImageView
                android:id="@+id/iv_background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:background="#7f000000"></View>

            <LinearLayout
                android:id="@+id/ll_header_recpmmend_acticler_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="140px"
                    android:layout_height="120px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4px">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/icon_huangguan2" />

                    <RelativeLayout
                        android:layout_width="98px"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_height="98px">

                        <liu.chj.mbabygo.activity.CircleImageView
                            android:id="@+id/iv_head_Photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/yuanyuanma1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/icon_v2" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_header_recpmmend_acticler_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="30px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="标题标题标题标题标标题标"
                    android:textColor="#ffffff"
                    android:textSize="40px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="by"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/tv_header_recpmmend_acticler_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="圆子妈妈_可爱宝贝"
                        android:textColor="#fff"
                        android:textSize="30px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_header_recpmmend_acticler_date"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20px"
                    android:gravity="center_horizontal"
                    android:text="2010-5-10"
                    android:textColor="#fff"
                    android:textSize="24px" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zuire2" />

        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/backgrund_color"
        android:layout_height="20px" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:background="@mipmap/pop_my_all_classify"
        android:id="@+id/ll_popup_classify"
        android:layout_width="247px"
        android:layout_marginTop="10px"
        android:layout_height="340px"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/tv_popup_all_trends"
            android:layout_marginTop="10px"
            android:layout_width="227px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="全部动态"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="34px"
            android:textColor="#333"
            />
        <TextView
            android:id="@+id/tv_popup_article"
            android:layout_width="227px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="文章"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="34px"
            android:textColor="#333"
            />
        <TextView
            android:id="@+id/tv_popup_activity"
            android:layout_width="227px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="活动"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="34px"
            android:textColor="#333"
            />
        <TextView
            android:id="@+id/tv_popup_tells"
            android:layout_width="227px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="说说"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="34px"
            android:textColor="#333"
            android:layout_marginBottom="10px"
            />


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_publish"
        style="@style/ClubToolbar"
        android:background="@color/backgrund_color"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:title="Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--返回按钮-->
            <ImageView
                android:id="@+id/iv_personal_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/icon_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="个人资料"
                android:textColor="#333"
                android:textSize="34px" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view_activity_publish"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/toolbar_activity_publish"
        android:background="#ccc"></View>

    <RelativeLayout
        android:background="@color/backgrund_color"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="头像"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="64px"
            android:orientation="horizontal">

            <liu.chj.mbabygo.activity.CircleImageView
                android:id="@+id/iv_my_Photo"
                android:layout_width="88px"
                android:layout_height="88px"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/yuanyuanma1" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:background="#d8d8d8"></View>

    <RelativeLayout
        android:background="@color/backgrund_color"
        android:id="@+id/rl_personal_name"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="昵称"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_toLeftOf="@+id/ivname"
            android:layout_marginLeft="130px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_personal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="64px"
                android:text="圆子妈妈"
                android:lines="1"
                android:textColor="#666"
                android:textSize="30px" />


        </LinearLayout>
        <ImageView
            android:id="@+id/ivname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:background="#d8d8d8"></View>
    <RelativeLayout
        android:background="@color/backgrund_color"
        android:id="@+id/rl_sex"
    android:layout_width="match_parent"
    android:layout_height="110px">

    <TextView
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:text="性别"
        android:textColor="#333"
        android:textSize="30px" />

    <LinearLayout
        android:layout_toLeftOf="@+id/iv_2"
        android:layout_marginLeft="130px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="64px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="女"
            android:textColor="#666"
            android:textSize="30px" />

       c
    </LinearLayout>
        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:background="#d8d8d8"></View>
    <RelativeLayout
        android:background="@color/backgrund_color"
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="生日"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="64px"
            android:layout_marginLeft="130px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2016/12/26"
                android:textColor="#666"
                android:textSize="30px" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:background="#d8d8d8"></View>
    <RelativeLayout
        android:background="@color/backgrund_color"
        android:id="@+id/rl_area"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:id="@+id/area"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_alignParentLeft="true"
            android:text="地区"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_4"
            android:layout_alignRight="@+id/area"
            android:layout_marginLeft="130px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="64px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="重庆 渝北"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#666"
                android:textSize="30px" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:background="#d8d8d8"></View>
    <RelativeLayout
        android:background="@color/backgrund_color"
        android:id="@+id/rl_introduce_oneself"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="简介"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_5"
            android:layout_marginLeft="130px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="64px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_introduce_oneself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="介绍下自己呗"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#666"
                android:textSize="30px" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#f5f5f5"></View>
    <RelativeLayout
        android:background="@color/backgrund_color"
        android:id="@+id/profession"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="行业"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_marginLeft="130px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"
                android:text="未填写"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#666"
                android:textSize="30px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_my_normal" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#f5f5f5"></View>
    <RelativeLayout
        android:id="@+id/rl_phone_bunding"
        android:background="@color/backgrund_color"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="手机绑定"
            android:textColor="#333"
            android:textSize="30px" />

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="64px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_bunding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="未绑定"
                android:textColor="#666"
                android:textSize="30px" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_my_normal" />

    </RelativeLayout>


</LinearLayout>
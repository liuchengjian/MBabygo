<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_aa">
    <LinearLayout
        android:id="@+id/ll_popup_Aa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgrund_color"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>
        <RelativeLayout
            android:id="@+id/rl_popup_tltle"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/backgrund"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:text="文本样式"

                android:textColor="#333"
                android:textSize="28px"
                android:gravity="center"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/tv_popup_Aa_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="28px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_yellow"
                android:layout_marginRight="30px"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:id="@+id/rl_popup_Aa_big_title"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大标题"
                android:textSize="34px"
                android:layout_centerInParent="true"
                android:textColor="#333"
                />
            <ImageView
                android:id="@+id/iv_popup_Aa_big_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/textaa_choose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="38px"
                android:visibility="gone"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>
        <RelativeLayout
            android:id="@+id/rl_popup_Aa_subtitle"
            android:layout_width="match_parent"
            android:layout_height="98px"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小标题"
                android:textSize="32px"
                android:layout_centerInParent="true"
                android:textColor="#333"
                />
            <ImageView
                android:id="@+id/iv_popup_Aa_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/textaa_choose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="38px"
                android:visibility="gone"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>
        <RelativeLayout
            android:id="@+id/rl_popup_Aa_text"
            android:layout_width="match_parent"
            android:layout_height="98px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正文"
                android:textSize="30px"
                android:layout_centerInParent="true"
                android:textColor="#333"
                />
            <ImageView
                android:id="@+id/iv_popup_Aa_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/textaa_choose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="38px"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
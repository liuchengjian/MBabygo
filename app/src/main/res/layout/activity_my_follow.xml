<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        style="@style/ClubToolbar"
        android:background="@color/backgrund_color"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:title="Toolbar"
        android:id="@+id/toolbar2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--返回按钮-->
            <ImageView
                android:id="@+id/iv_my_follow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textColor="#333"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:textSize="34px" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@color/backgrund">
        <liu.chj.mbabygo.SortList.EditTextWithDel
            android:id="@+id/et_search"
            android:layout_width="690px"
            android:layout_centerInParent="true"
            android:layout_height="58px"
            android:hint="  搜索用户"
            android:textColorHint="@color/text_yellow"
            android:textColor="@color/text_yellow"
            android:background="#f2ffffff"
            android:layout_marginLeft="20dp"
            android:paddingLeft="273px"
            android:textSize="26px" />
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_my_follow"
        ></ListView>


</LinearLayout>
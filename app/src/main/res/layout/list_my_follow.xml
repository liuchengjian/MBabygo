<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:paddingLeft="30px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="92px"
            android:layout_gravity="center_vertical"
            android:layout_height="92px">

            <liu.chj.mbabygo.activity.CircleImageView
                android:id="@+id/iv_my_follow_headimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/yuanyuanma1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_v2" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30px"
            >
            <TextView
                android:id="@+id/tv_my_follow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小红帽"
                android:layout_marginTop="30px"
                android:textSize="34px"
                android:textColor="#ff6c00"
                />
            <TextView
                android:id="@+id/tv_my_follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们都爱笑"
                android:textSize="22px"
                android:layout_marginTop="20px"
                android:textColor="#aaa"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_my_follow_yes_or_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="30px"
            >
            <ImageView
                android:id="@+id/iv_my_follow_yes_or_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/follow_no"
                android:layout_marginTop="24px"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_my_follow_yes_or_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加关注"
                android:layout_marginTop="15px"
                android:textSize="22px"
                android:textColor="#333"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>